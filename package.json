{
  "name": "flamepass",
  "productName": "Flamepass",
  "version": "1.0.0",
  "description": "Web browser for school environments",
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-packager . Flamepass --platform=win32 --arch=x64 --out=dist --overwrite --icon=app/assets/img/logo.ico --asar=false --prune=true",
    "build:linux": "electron-packager . Flamepass --platform=linux --arch=x64 --out=dist --overwrite --icon=app/assets/img/logo.png --asar=false --prune=true",
    "build:linux-arm": "electron-packager . Flamepass --platform=linux --arch=arm64 --out=dist --overwrite --icon=app/assets/img/logo.png --asar=false --prune=true",
    "build:all": "npm install && npm run build:win && npm run build:linux && npm run build:linux-arm"
  },
  "author": "CarbonBoys",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.10",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-packager": "^17.1.1"
  },
  "build": {
    "appId": "com.flamepass.app",
    "productName": "Flamepass",
    "files": [
      "app/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "repo",
        "to": "repo",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "dist"
    }
  }
}